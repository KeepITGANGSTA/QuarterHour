<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwie.com.quarterhour.PublishEpisodeActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_video"
        android:layout_width="match_parent"
        android:layout_height="800px">

        <ImageView
            android:id="@+id/iv_gifVideo"
            android:scaleType="fitXY"
            android:src="@drawable/video_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/tv_video_back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"
                android:text="返回"
                android:textSize="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="40px"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="视频"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_video_publish"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:text="发布"
                android:textSize="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2DEFA"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_videoDesc"
            android:layout_margin="20px"
            android:hint="给视频配上文字吧"
            android:background="@null"
            android:maxHeight="270px"
            android:textSize="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="270px"
            android:orientation="vertical"
            android:id="@+id/lin_ppppp"
            android:background="@drawable/playse"
            android:layout_width="150px"
            android:layout_height="150px"/>

    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoLinearLayout>