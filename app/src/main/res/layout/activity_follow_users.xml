<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:background="#EBEBEB"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwie.com.quarterhour.FollowUsersActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/qqBgColor"
        android:paddingLeft="35px"
        android:paddingRight="35px"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_follow_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_back"
            android:layout_width="70px"
            android:layout_height="70px" />

        <TextView
            android:textSize="40px"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:text="我的关注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:textSize="40px"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:text="热门关注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20px"
        android:id="@+id/recy_follow_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:id="@+id/follow_users_noNet"
        android:visibility="gone"
        layout="@layout/not_net_layout"/>

</com.zhy.autolayout.AutoLinearLayout >
