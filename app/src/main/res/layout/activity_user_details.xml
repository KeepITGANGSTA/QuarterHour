<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwie.com.quarterhour.UserDetailsActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:elevation="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="600px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/phonelogin_bg" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:paddingLeft="35px"
            android:paddingRight="35px"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/iv_user_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_back"
                android:layout_width="70px"
                android:layout_height="70px" />

            <TextView
                android:id="@+id/tv_user_title"
                android:textSize="40px"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="NickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_user_share"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/share"
                android:layout_width="70px"
                android:layout_height="70px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200px">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_weight="1"
                android:id="@+id/iv_user_icon"
                android:layout_marginLeft="10px"
                android:layout_gravity="top"
                android:layout_marginTop="-60px"
                android:src="@drawable/publish_success_iv"
                app:riv_oval="true"
                android:layout_width="150px"
                android:layout_height="150px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50px">
                    <TextView
                        android:id="@+id/tv_user_fans"
                        android:gravity="center"
                        android:textSize="30px"
                        android:layout_weight="1"
                        android:text="11111111粉丝"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="#C4C4C4"
                        android:layout_width="1px"
                        android:layout_height="50px"/>
                    <TextView
                        android:id="@+id/tv_user_noti"
                        android:gravity="center"
                        android:textSize="30px"
                        android:layout_weight="1"
                        android:text="17关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/lin_user_notice"
                    android:gravity="center"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@drawable/user_notice"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60px">
                    <ImageView
                        android:id="@+id/iv_plus"
                        android:src="@drawable/plus_user"
                        android:layout_width="30px"
                        android:layout_height="30px" />
                    <TextView
                        android:id="@+id/tv_noticeOrNoticed"
                        android:textColor="@color/qqBgColor"
                        android:textSize="30px"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lin_user_parise"
                android:background="@drawable/user_parise"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="100px">

                <ImageView
                    android:src="@drawable/user_parise_white"
                    android:layout_width="50px"
                    android:layout_height="50px" />
                <TextView
                    android:id="@+id/tv_userParisedNum"
                    android:textColor="#ffffff"
                    android:text="00"
                    android:textSize="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:background="#CDCDCD"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_user_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</com.zhy.autolayout.AutoLinearLayout>
