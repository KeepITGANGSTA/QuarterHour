<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwie.com.quarterhour.PersonalActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:paddingLeft="30px">

        <TextView
            android:layout_centerVertical="true"
            android:textSize="40px"
            android:textColor="#ffffff"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:textSize="40px"
            android:textColor="#ffffff"
            android:text="个人中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_personIcon"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200px">

        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/tv_personNickName"
            android:text="昵称"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginRight="30px"
            android:id="@+id/iv_personIcon"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/phonelogin_bg"
            android:layout_width="150px"
            android:layout_height="150px"
            app:riv_oval="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_clearCache"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="130px">

        <TextView
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_personCacheSize"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textSize="40px"
            android:textColor="#C4C4C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_VersionUpdate"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="130px">

        <TextView
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:text="版本更新"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_personVersionCode"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1.01"
            android:textSize="40px"
            android:textColor="#C4C4C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
