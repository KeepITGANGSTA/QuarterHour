<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lin_head"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="230px">
        <TextView
            android:id="@+id/tv_duan"
            android:textSize="40px"
            android:text="段"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv_you"
            android:textSize="40px"
            android:text="友"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv_chu"
            android:textSize="40px"
            android:text="出"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv_zheng"
            android:textSize="40px"
            android:text="征"
            android:layout_width="50px"
            android:layout_height="50px" />
        <com.makeramen.roundedimageview.RoundedImageView

            android:id="@+id/id_fresh_head"
            android:layout_alignParentBottom="true"
            app:riv_oval="true"
            android:src="@drawable/neihan"
            android:layout_width="150px"
            android:layout_height="150px"
            />
        <TextView
            android:id="@+id/tv_cun"
            android:textSize="40px"
            android:text="寸"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv_cao"
            android:textSize="40px"
            android:text="草"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv_bu"
            android:textSize="40px"
            android:text="不"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv_sheng"
            android:textSize="40px"
            android:text="生"
            android:layout_width="50px"
            android:layout_height="50px" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
