<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center_vertical"
        android:padding="30px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170px">

        <com.makeramen.roundedimageview.RoundedImageView
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true"
            android:id="@+id/iv_hot_icon"
            android:layout_width="100px"
            android:layout_height="100px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_hot_auth"
                    android:textColor="#E51C23"
                    android:textSize="40px"
                    android:text="作者"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_publishTime"
                    android:textSize="25px"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:text="发布时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/iv_open"
                android:src="@drawable/icon_open"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="90px"
                android:layout_height="90px" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_hot_content"
        android:paddingRight="20px"
        android:textSize="45px"
        android:text="发布内容"
        android:paddingLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="5px"
        android:layout_width="match_parent"
        android:layout_height="500px">

        <include
            layout="@layout/simple_player_view_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_publish"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:src="@drawable/phonelogin_bg"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.zhy.autolayout.AutoLinearLayout
            android:clickable="true"
            android:id="@+id/item_menu"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_width="100px"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_hot_parise"
                    android:layout_marginBottom="10px"
                    android:src="@drawable/praise"
                    android:layout_width="50px"
                    android:layout_height="50px" />
                <TextView
                    android:id="@+id/tv_hot_pariseNum"
                    android:textSize="20px"
                    android:textColor="#ffffff"
                    android:text="点赞数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_hot_collect"
                    android:layout_marginBottom="10px"
                    android:src="@drawable/collect"
                    android:layout_width="50px"
                    android:layout_height="50px" />
                <TextView
                    android:id="@+id/tv_hot_collectNum"
                    android:textSize="20px"
                    android:textColor="#ffffff"
                    android:text="收藏数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_hot_share"
                    android:layout_marginBottom="10px"
                    android:src="@drawable/praise"
                    android:layout_width="50px"
                    android:layout_height="50px" />
                <TextView
                    android:id="@+id/tv_hot_shareNum"
                    android:textSize="20px"
                    android:textColor="#ffffff"
                    android:text="分享数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_hot_comment"
                    android:layout_marginBottom="10px"
                    android:src="@drawable/praise"
                    android:layout_width="50px"
                    android:layout_height="50px" />
                <TextView
                    android:id="@+id/tv_hot_commentNum"
                    android:textSize="20px"
                    android:textColor="#ffffff"
                    android:text="评论数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:background="#C4C4C4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:padding="10px"
        android:background="#40C4C4C4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="40px"
            android:paddingLeft="20px"
            android:text="作者 ： 内容"
            android:id="@+id/tv_commentAuth_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"/>

        <TextView
            android:textSize="40px"
            android:paddingLeft="20px"
            android:text="作者 ： 内容"
            android:id="@+id/tv_commentAuth_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
