<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center_vertical"
        android:padding="30px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170px">

        <com.makeramen.roundedimageview.RoundedImageView
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true"
            android:id="@+id/iv_user_icon_item"
            android:layout_width="100px"
            android:layout_height="100px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_user_item_auth"
                    android:textColor="#E51C23"
                    android:textSize="40px"
                    android:text="作者"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_user_publishTime"
                    android:textSize="25px"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:text="发布时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/iv_open"
                android:src="@drawable/icon_open"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="90px"
                android:layout_height="90px" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_user_content"
        android:paddingRight="20px"
        android:textSize="45px"
        android:text="发布内容"
        android:paddingLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoRelativeLayout

        android:padding="5px"
        android:layout_width="match_parent"
        android:layout_height="570px">

        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/user_girffe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:background="#C4C4C4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lin_addTalk"
        android:padding="10px"
        android:background="#40C4C4C4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:textSize="40px"
            android:paddingLeft="20px"
            android:text="作者 ： 内容"
            android:id="@+id/tv_use_commentAuth_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"/>

        <TextView
            android:visibility="gone"
            android:textSize="40px"
            android:paddingLeft="20px"
            android:text="查看更多..."
            android:id="@+id/tv_user_commentMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
